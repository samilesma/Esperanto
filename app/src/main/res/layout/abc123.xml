<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="386dp"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLearn1"
            android:layout_weight="1.10"
            android:textAlignment="center"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tLearn1"
            android:layout_weight="1.29"
            android:textSize="30dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sound"
            android:id="@+id/ivSound1"
            android:gravity="center"
            android:layout_weight="0.13"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLearn2"
            android:layout_weight="1.00"
            android:textAlignment="center"/>


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tLearn2"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sound"
            android:id="@+id/ivSound2"
            android:gravity="center"
            android:layout_weight="0.13"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLearn3"
            android:layout_weight="1.00"
            android:textAlignment="center"/>


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tLearn3"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sound"
            android:id="@+id/ivSound3"
            android:gravity="center"
            android:layout_weight="0.13"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivLearn4"
            android:layout_weight="1.00"
            android:textAlignment="center"/>


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tLearn4"
            android:layout_weight="1"
            android:textSize="30dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sound"
            android:id="@+id/ivSound4"
            android:gravity="center"
            android:layout_weight="0.13"/>

    </LinearLayout>
</LinearLayout>